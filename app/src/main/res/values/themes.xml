<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Top level DayNight theme to be used in AndroidManifest.xml -->
    <style name="Resplash.Theme.DayNight" parent="Base.Theme" />

    <style name="Resplash.Theme.DayNight.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Resplash.Theme.DayNight.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Resplash.Theme.DayNight.PhotoDetail">
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Resplash.Theme.DayNight.PhotoZoom">
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>
        <item name="android:navigationBarColor">@color/immersive_sys_ui</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Base custom theme which will be shared between both light and dark theme variants -->
    <style name="Base.Theme" parent="Base.MaterialThemeBuilder">
        <!-- Material color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>

        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnError">@color/color_on_error</item>
        <item name="colorControlNormal">@color/color_on_surface</item>

        <!-- Material type attributes -->
        <item name="android:textColor">@color/sl_text_color</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Resplash.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Resplash.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Resplash.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Resplash.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Resplash.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Resplash.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Resplash.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Resplash.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Resplash.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Resplash.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Resplash.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Resplash.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Resplash.Overline</item>

        <!-- Material shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Resplash.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Resplash.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Resplash.LargeComponent</item>

        <!-- Component styles -->
        <item name="dialogTheme">@style/ThemeOverlay.Theme.AlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Theme.AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Theme.MaterialAlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Theme.BottomSheetDialog</item>
        <item name="bottomAppBarStyle">@style/Widget.Theme.BottomAppBar</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>
    </style>

    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="alphaEmphasisHigh">@dimen/alpha_emphasis_high</item>
        <item name="alphaEmphasisMedium">@dimen/alpha_emphasis_medium</item>
        <item name="alphaEmphasisDisabled">@dimen/alpha_emphasis_disabled</item>

        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">?android:colorBackground</item>

        <item name="android:windowContentTransitions">true</item>

        <!-- Remap legacy AppCompat attributes to MaterialComponent attributes -->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>

</resources>
